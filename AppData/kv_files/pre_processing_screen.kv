#: kivy 2.0.0

<PreProcessingScreen>:
    name: "prep_processing_screen"
    on_enter: root.update_current_image()
    GridLayout:
        rows: 4
        Label:
            id: file_name
            size_hint_y: 0.1
            text: "File Name"
        GridLayout:
            padding: 50, 10, 50, 10
            size_hint_y: 0.2
            rows: 2
            TextInput:
                id: min_radius
            TextInput:
                id: max_radius
            TextInput:
                id: cian_threshold
            Label:
                text: "min radius"
            Label:
                text: "max radius"
            Label:
                text: "CIAN"
        GridLayout:
            cols: 2
            GridLayout:
                cols: 6
                padding: 10, 10, 10, 10
                GridLayout:
                    cols: 1
                    size_hint_x: 0.25
                    Label:
                        text: "Base"
                    Label:
                        text: "100 pix"
                GridLayout:
                    cols: 1
                    Image:
                        id: base_image
                        source: "AppData/meta/base_image.png"
                    Image:
                        id: current_image_100
                        source: "AppData/meta/current_100.png"
                GridLayout:
                    cols: 1
                    size_hint_x: 0.25
                    Label:
                        text: "10 pix"
                    Label:
                        text: "250 pix"
                GridLayout:
                    cols: 1
                    Image:
                        id: current_image_10
                        source: "AppData/meta/current_10.png"
                    Image:
                        id: current_image_250
                        source: "AppData/meta/current_250.png"
                GridLayout:
                    cols: 1
                    size_hint_x: 0.25
                    Label:
                        text: "50 pix"
                    Label:
                        text: "500 pix"
                GridLayout:
                    cols: 1
                    Image:
                        id: current_image_50
                        source: "AppData/meta/current_50.png"
                    Image:
                        id: current_image_500
                        source: "AppData/meta/current_500.png"
        GridLayout:
            rows: 1
            size_hint_y: 0.1
            Button:
                text: "Back"
                on_release:
                    root.release_back()
            Button:
                text: "Forward"
                background_color: 0, 1, 0, 1
                on_release:
                    root.release_forward()