#: kivy 2.0.0

<FileExporter>:
    name: "file_exporter"
    on_enter: root.fetch_file_name()

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        padding: 20, 20, 20, 20

        TextInput:
            id: file_path
            size_hint_y: 0.07
            text: ""
            font_size: 15

        FileChooserListView:
            id: file_exporter
            path: root.get_home_path()

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Back"
                on_release: root.release_back()

            Button:
                text: "Save"
                background_color: 0, 0, 1, 1
                on_release:
                    root.export_data(file_exporter.path)